extends layout

block content
  .row
    .col
      p Code: #{people.p_code}
    .col-6
      p Name: #{people.name}
    .col
      p SSN: #{people.social}
  .row
    .col
      img(src='', alt='Person pic')
    .col
      p Race: #{people.prace}
    .col
      p Gender: #{people.nation}
    .col
      p Height: #{people.height}
    .col
      p Weight: #{people.weight}
    .col
      p Hair Color: #{people.hair_color}
    .row
      .col
        p DOB/DOD: #{people.lifespan}
      .col
        p Eye Color: #{people.eye_color}
  .row
    .col
      p Gang Affiliation: #{people.gang}
    .col 
      p Address: #{people.adress}
    .col
      p Phone Number: #{people.phone}
  .row
    .col
      p Drivers Licence: #{people.drivers}
    .col
      p Address: #{people.adress}
    .col
      p Phone Number: #{people.phone}
  .row
    .col
      p Scars/Marks/Tattoos: #{people.scar}
    .col
      p HAZARD: #{people.haz}

    
    

    div(style='margin-left:20px;margin-top:20px')

      h4 Vehicle:

      dl
        each vehicle in people_vehicles
          dt
            a(href=vehicle.url) #{vehicle.model}
          dd #{vehicle.make}

        else
          p This person has no vehicle associated with them.

            hr
    p
      a(href=people.url+'/delete') Delete Person
    p
      a(href=people.url+'/update') Update Person